#!/usr/bin/env bash
# Start Mobius RAG backend. Run from any directory.

SCRIPT="$0"
while [ -L "$SCRIPT" ]; do
  TARGET="$(readlink "$SCRIPT")"
  if [[ "$TARGET" == /* ]]; then
    SCRIPT="$TARGET"
  else
    SCRIPT="$(dirname "$SCRIPT")/$TARGET"
  fi
done
ROOT="$(cd "$(dirname "$SCRIPT")" && pwd)"
cd "$ROOT" || exit 1
source .venv/bin/activate
echo "Mobius RAG backend â†’ http://localhost:8000"
echo "Press Ctrl+C to stop"
echo ""
exec uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
